generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native"]
  previewFeatures = ["referentialActions"]
}

datasource db {
  provider = "postgresql"
  url      = env("EVENT_APP_BASE")
}

model User {
  Login    String   @unique @db.VarChar(100)
  Password DateTime @db.Timestamp(0)
  Name     String   @db.VarChar(100)
  Email    String?  @db.VarChar(100)
  RoleID   Int
  Role     Role     @relation(fields: [RoleID], references: [ID], onDelete: SetNull)
  Event    Event[]
}

model Event {
  nnEvent      Int       @id @default(autoincrement())
  CreationDate DateTime  @db.Timestamp(0)
  CreatorLogin String    @db.VarChar(100)
  ReceiverID   String    @db.VarChar(100)
  SystemID     String    @db.VarChar(255)
  Text         String
  EventTypeID  Int
  isRead       Boolean   @default(false)
  User         User      @relation(fields: [CreatorLogin], references: [Login], onDelete: SetNull)
  EventType    EventType @relation(fields: [EventTypeID], references: [ID], onDelete: SetNull)
  System       System    @relation(fields: [SystemID], references: [Key], onDelete: SetNull)
}

model Role {
  ID   Int    @id @default(autoincrement())
  Name String @db.VarChar(100)
  User User[]
}

model System {
  ID    Int     @id @default(autoincrement())
  Name  String  @db.VarChar(100)
  Key   String  @unique @db.VarChar(255)
  Event Event[]
}

model EventType {
  ID           Int     @id @default(autoincrement())
  Name         String  @db.VarChar(100)
  DefaultColor String  @db.VarChar(30)
  Event        Event[]
}

model Settings {
  ID           Int    @id @default(autoincrement())
  ReceiverID   String @db.VarChar(100)
  DefaultColor String @db.VarChar(30)
}
